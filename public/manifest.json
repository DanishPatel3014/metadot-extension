{
  "name": "Polo Wallet",
  "description": "A crypto wallet for Polkadot based chains and their parachains",
  "version": "0.0.2",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Polo Wallet"
  },
  "permissions": ["activeTab", "tabs"],
  "icons": {
    "16": "static/media/16x16.png",
    "48": "static/media/48x48.png",
    "128": "static/media/128x128.png"
  },
  "content_security_policy": "script-src 'self' blob: 'unsafe-eval' 'wasm-eval'; object-src 'self'",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_specific_settings": {
  "gecko": {
    "id": "test@gmail.com"
  }
}
}
