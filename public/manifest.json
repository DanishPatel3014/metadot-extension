{
  "name": "Metadot",
  "description": "A crypto wallet for Polkadot based chains and their parachains",
  "version": "0.0.3.4",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Metadot"
  },
  "icons": {
    "16": "static/media/16x16.png",
    "48": "static/media/48x48.png",
    "128": "static/media/128x128.png"
  },
  "content_security_policy": "script-src 'self' blob: 'unsafe-eval' 'wasm-eval'; object-src 'self'",
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": ["storage", "tabs"],
  "browser_specific_settings": {
    "gecko": {
      "id": "{5f568f4f-6781-4a94-83cd-7e2a7cf1bf70}"
    }
  }
}
